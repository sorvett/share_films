<div class="container">
 <h1 class="title">Editing Film</h1>
</div>




<% if @blog.errors.any? %>
  <p>error</p>
   <% @blog.errors.full_messages.each do |msg| %>
     <%= msg %><br>
   <% end %>
<% end %>

<section class="section">
	<div class="container">
		 <div class="columns is-centered">
		 	 <div class="column is-6">
		 	 	<%= form_for(@blog) do |f| %>
		 	 	 <div class="field">
		 	 	 	<label for="blog_title">タイトル</label>
		 	 	 	<%= f.text_field :title, class: "input" %>
		 	 	 </div>

		 	 	  <div class="field">
		 	 	  	<label for="blog_opinion">感想</label>
			        <%= f.text_area :body, class: "textarea" %>
		 	 	  </div>

		 	 	  <div class="field">
		 	 	  	<label for="blog_image">画像</label>
			        <%= f.attachment_field :image, class: "input" %>
		 	 	  </div>

		 	 	   <%= f.submit '更新', class: "button is-link" %>
		 	 	 <% end %>

		 	 	 <a><%= link_to "Show", blog_path(@blog.id) %></a>
				 <a><%= link_to "Back", blogs_path %></a>
		 	 </div>
		 </div>
	</div>
</section>