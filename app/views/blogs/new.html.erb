<div class="parent">
 <h1>New Film</h1>
	<%= form_for(@blog) do |f| %>

	 <div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %>
	</div>

	 <div class="form-group">
		<%= f.label :body %>
		<%= f.text_area :body, class: "form-control" %>
	</div>

　　　<div class="form-group">
		<p class="card-text"><%= f.attachment_field :image %></p>
	</div>

	<div class="child">
		<%= f.submit class: "btn btn-info btn-block" %>
	</div>
	<% end %>
</div>
