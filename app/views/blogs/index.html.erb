 <div class="col-xs-9">
     <h1>Films</h1>
     <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
          <tr>
           <% @blogs.each do |blog| %>
            <tbody>
              <td> <%=link_to(blog.user) do%><%= attachment_image_tag blog.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %><%end%>
              </td>
              <td><%= link_to blog_path(blog.id) do %>
                  <%=blog.title%>
                  <% end %>
               </td>
                  <td><%=blog.body%></td>
	                <td>
	                  <% if blog.favorited_by?(current_user) %>
	                  <li>
	                  <%= link_to blog_favorites_path(blog, redirect_id: 0), method: :delete do %>
	                  <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
	                  <%= blog.favorites.count %> いいね
	                  <% end %>
	                  </li>
	                  <% else %>
	                  <li>
	                  <%#= link_to blog_favorites_path(blog, redirect_id: 0), method: :post do %>
	                  <!-- <i class="fa fa-heart-o" aria-hidden="true"></i> -->
	                  <%#= blog.favorites.count %> <!-- いいね -->
	                  <%# end %>
	                  </li>
	                  <% end %>
	                </td>
		                <td>
		                  <ul class="inline-meta">
		                    <li>By
		                      <%= blog.user.name %>
		                    </li>
		                    <li>
		                      <%#= link_to blog_path(blog.id) do %>
		                            <%#= blog.blog_comments.count %> コメント
		                      <%# end %>
		                    </li>
		                  </ul>
		                </td>
             </tbody>
           <%end%>
        </tr>
      </table>
     </div>
