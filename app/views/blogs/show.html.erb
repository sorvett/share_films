<body>
  <div class="body">
  	<div class="profile-container">
  		 <div class="container">
  		 	<div class="row">
  		 		<div class="col-xs-9">
  		 			<h2>Film detail</h2>
  		 			<table class="table table-striped">
  		 				<tbody>
  		 					<tr>
  		 						<td>
  		 							<%= link_to user_path(@blog.user) do %>
  		 							<%= attachment_image_tag(@blog.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg") %><br>
  		 							<%= @blog.user.name %>
  		 							<% end %>
  		 						</td>
  		 						<td>
  		 							<%= attachment_image_tag @blog, :image, :fill, 60, 60, format: 'jpg' %>
  		 						</td>
  		 						<td>
  		 							<%= link_to @blog.title, blog_path(@blog) %>
  		 						</td>
  		 						<td>
  		 							<%= @blog.body %>
  		 						</td>

  		 						<td>
				                  <% if @blog.favorited_by?(current_user) %>
					                  <li>
					                  <%= link_to blog_favorites_path(@blog), method: :delete do %>
					                  <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
					                  <%= @blog.favorites.count %> いいね
					                  <% end %>
					                  </li>
					              <% else %>
					                  <li>
					                  <%= link_to blog_favorites_path(@blog), method: :post do %>
					                  <i class="fa fa-heart-o" aria-hidden="true"></i>
					                  <%= @blog.favorites.count %> いいね
					                  <% end %>
					                  </li>
				                  <% end %>
				                </td>

				                <td>
				                	<%= @blog.blog_comments.count %>件コメント
				                </td>

  		 						<%if current_user == @blog.user%>
	  		 						<td><%= link_to "Edit", edit_blog_path(@blog.id) %>
	                                </td>
	                                <td><%= link_to "Destroy" , blog_path(@blog.id), method: :delete , "data-confirm" => "本当に削除しますか？" %>
	                                </td>
                               <%end%>
  		 					</tr>
  		 				</tbody>
  		 			</table>

  		 			<table>
  		 				<%= form_for [@blog, @comment] do |f| %>
  		 				 <tr>
  		 				 	<td>
  		 				 		<%= f.text_area :comment, placeholder: "コメントをここに" %>
  		 				 	</td>
  		 				 	<td>
  		 				 		<%= f.submit "Send" %>
  		 				 	</td>
  		 				 </tr>
  		 				<% end %>
  		 			</table>
  		 		</div>
  		 	</div>
  		 </div>
  	</div>
  </div>
</body>
