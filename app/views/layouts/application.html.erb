<!DOCTYPE html>
<html>
  <head>
    <title>ShareFilms</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

      <nav class="navbar is-warning">
        <div class="navbar-brand">
          <h1 class="title is-4" style="font-family: fantasy;">Share Films</h1>
        </div>


            <% if user_signed_in? %>
               <div id="navbarExampleTransparentExample" class="navbar-menu">
                <div class="navbar-item">
                </div>
                 <div class="navbar-end">
                  <div class="navbar-item">
                   <div class="field is-grouped">
                       <p class="control">
                        <%=link_to "Home" ,user_path(current_user),class: "navbar-item button is-warning is-light"%>
                       </p>

                       <p class="control">
                        <%=link_to "About" ,about_path,class: "navbar-item button is-warning is-light" %>
                       </p>


                       <p class="control">
                        <%=link_to "Films"  ,blogs_path,class: "navbar-item button is-warning is-light"  %>
                        </p>

                        <p class="control">
                        <%=link_to "NewFilms"  , new_blog_path, class: "navbar-item button is-warning is-light" %>
                       </p>

                       <p class="control">
                        <%=link_to "logout"  , destroy_user_session_path,  method: :delete, class: "navbar-item button is-warning is-light" %>
                       </p>
                   </div>
                  </div>
                 </div>
                </div>

              <% else %>
               <div class="navbar-end">
                <div class="navbar-item">
                 <div class="field is-grouped">
                    <p class="control"><%=link_to "Home" ,root_path,class: "navbar-item button is-warning is-light" %></p>

                    <p class="control"><%=link_to "About" ,about_path,class: "navbar-item button is-warning is-light"%></p>

                    <p class="control"><%=link_to "Sign up", new_user_registration_path,class: "navbar-item button is-warning is-light" %></p>
                    <p class="control"><%=link_to "login"  ,new_user_session_path,class: "navbar-item button is-warning is-light" %></p>
                </div>
               </div>
              </div>
             <% end %>
      </nav>
    <%= yield %>
  </body>
</html>
