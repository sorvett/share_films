<div class="container">
	<h1 class="title">
        User info
	</h1>
</div>


		<% if @user.errors.any? %>
			<p>error</p>
             	<% @user.errors.full_messages.each do |msg| %>
                  <%= msg %><br>
                <% end %>
        <% end %>


        

<section class="section">
	<div class="container">
		 <div class="columns is-centered">
		 	 <div class="column is-6">
		 	  <%= form_for(@user) do |f| %>
			        <div class="field">
			        <%= f.label :username, "ユーザー名", class: "label" %>
					<%= f.text_field :name, class: "input" %>
					</div>

					<div class="field">
						<%= f.label :image, "image", class: "label" %>
						<%= f.attachment_field :profile_image, class: "input" %>
					</div>

					<div class="field">
						<%= f.label :introduction, "introduction", class: "label" %>
						<%= f.text_area :introduction, class: "textarea" %>
					</div>

						<%= f.submit "update", class: "button is-link" %>
		      <% end %>
		 	 </div>
		 </div>
	</div>
</section>